{
  "name": "api-typescript",
  "version": "1.0.0",
  "description": "API REST com Node.js e TypeScript em uma arquitetura modular",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm install --save-dev @types/node @types/express @types/cors @types/bcrypt @types/jsonwebtoken @types/uuid && tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",
    "render-build": "npm install --save-dev @types/node @types/express @types/cors @types/bcrypt @types/jsonwebtoken @types/uuid && npx prisma generate && tsc"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "api",
    "rest",
    "typescript",
    "nodejs",
    "express",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.14.0",
    "@types/uuid": "^9.0.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}